@model ViewModel.Views.CommonResult
@{
    ViewData["Title"] = "Categories";
}


@{ 

    var resultList = Model.Data as List<ViewModel.Views.Content.ServiceCategory.CategoryListModel>;

}

<a href="~/Definition/CategoryDetail"  class="btn btn-primary">Add New Category</a>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">CategoryName</th>
                <th scope="col">CategoryUrl</th>
                <th scope="col">ParentCategoryName</th>
                <th>ServiceCount</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
         @foreach (var item in resultList)
         {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Url</td>
                <td>@item.ParentCategoryName</td>
                <td><a href="~/Service/List?category_id=@item.ID">@item.ServiceCount</a></td>
                <td>
                    <a href="~/Definition/CategoryDetail?category_id=@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-edit"></i></a>
                    <a href="~/Definition/CategoryProperties?category_id=@item.ID" class="btn btn-info btn-xs"><i class="fa fa-list"></i></a>
                </td>
            </tr>
         }
        </tbody>
    </table>
