                            <input type="password" class="form-control" placeholder="@lexiconHelper.GetTextValue("_placeholder_password", 2)">
                        </div>
                        <div class="text-right">
                        </div>
                        <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">@lexiconHelper.GetTextValue("_login", 2)</button>
                        <div class="login-or">
