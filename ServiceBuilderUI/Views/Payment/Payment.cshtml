@inject Business.Service.Infrastructure.ILexiconService lexiconHelper;

@{
    ViewBag.Title = lexiconHelper.GetTextValue("_payment_page_title", 26);
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container">
        <div class="row">

            @await Html.PartialAsync("../Account/_GetUserMenu", new ViewDataDictionary(ViewData)
                                {
                                    { @"menu", @"payment" }
                                })
            <div class="col-xl-9 col-md-8">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">@lexiconHelper.GetTextValue("_with_credit_title", 26)</h4>
                                <div class="wallet-details">
                                    <div class="d-flex justify-content-between my-4">
                                        <a href="/credit-payment" class="btn btn-primary btn-block withdraw-btn">@lexiconHelper.GetTextValue("_with_credit_title_btn_text", 26)</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">@lexiconHelper.GetTextValue("_with_order_title", 26)</h4>
                                <div class="wallet-details">
                                    <div class="d-flex justify-content-between my-4">
                                        <a href="/order-payment" class="btn btn-primary btn-block withdraw-btn">@lexiconHelper.GetTextValue("_with_order_title_btn_text", 26)</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
