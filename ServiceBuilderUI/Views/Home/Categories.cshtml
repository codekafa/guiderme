@inject Business.Service.Infrastructure.ILexiconService lexiconHelper;
@model ViewModel.Views.CommonResult
@{
    ViewBag.Title = lexiconHelper.GetTextValue("_categories_page_title", 10);
    ViewBag.CategoriesSelect = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var categories = Model.Data as List<ViewModel.Views.Content.ServiceCategory.CategoryListModel>;
}

<div class="content">
    <div class="container">
        <div class="catsec clearfix">
            <div class="row">

                @foreach (var item in categories)
                {
                    <div class="col-lg-4 col-md-6">
                        <a href="category/@item.Url">
                            <div class="cate-widget">
                                @{
                                    string fileTransform = item.GetFileNameFromUrl();
                                    string url = "https://res.cloudinary.com/servicebuilder/image/upload/w_640,h_426/" + fileTransform;
                                }
                                <img src="@url" alt="">
                                <div class="cate-title">
                                    <h3><span><i class="fas fa-circle"></i> @item.Name</span></h3>
                                </div>
                                <div class="cate-count">
                                    <i class="fas fa-clone"></i> @item.ServiceCount
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
            @*<div class="pagination">
                    <ul>
                        <li class="active"><a href="javascript:void(0);">1</a></li>
                        <li><a href="javascript:void(0);">2</a></li>
                        <li><a href="javascript:void(0);">3</a></li>
                        <li><a href="javascript:void(0);">4</a></li>
                        <li class="arrow"><a href="javascript:void(0);"><i class="fas fa-angle-right"></i></a></li>
                    </ul>
                </div>*@
        </div>
    </div>﻿
</div>﻿








